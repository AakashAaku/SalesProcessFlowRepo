@model RoleViewModel
@{
    ViewData["Title"] = "CreateRole";
}

<h1>CreateRole</h1>
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
