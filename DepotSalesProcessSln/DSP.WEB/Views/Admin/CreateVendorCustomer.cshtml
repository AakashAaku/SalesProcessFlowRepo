            <span asp-validation-for="VendorCustomers.Name" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="VendorCustomers.Reference"></label>
            <input asp-for="VendorCustomers.Reference" class="form-control" />

            <span asp-validation-for="VendorCustomers.Reference" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="VendorCustomers.Group"></label>
            <input asp-for="VendorCustomers.Group" class="form-control" />

            <span asp-validation-for="VendorCustomers.Group" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="VendorCustomers.ContactPerson"></label>
            <input asp-for="VendorCustomers.ContactPerson" class="form-control" />

            <span asp-validation-for="VendorCustomers.ContactPerson" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="VendorCustomers.Number"></label>
            <input asp-for="VendorCustomers.Number" class="form-control" />

            <span asp-validation-for="VendorCustomers.Number" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="VendorCustomers.Email"></label>
            <input asp-for="VendorCustomers.Email" class="form-control" />
            <span asp-validation-for="VendorCustomers.Email" class="text-danger"></span>
