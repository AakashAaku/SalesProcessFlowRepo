            <label asp-for="VendorCustomers.ContactPerson"></label>
            <input asp-for="VendorCustomers.ContactPerson" class="form-control" />

            <span asp-validation-for="VendorCustomers.ContactPerson" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="VendorCustomers.EmailId"></label>
            <input asp-for="VendorCustomers.EmailId" class="form-control" />
            <span asp-validation-for="VendorCustomers.EmailId" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="VendorCustomers.ShipToAddress"></label>
            <input asp-for="VendorCustomers.ShipToAddress" class="form-control" />
            <span asp-validation-for="VendorCustomers.ShipToAddress" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="VendorCustomers.BillToAddress"></label>
            <input asp-for="VendorCustomers.BillToAddress" class="form-control" />
            <span asp-validation-for="VendorCustomers.BillToAddress" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="VendorCustomers.Remarks"></label>
            <input asp-for="VendorCustomers.Remarks" class="form-control" />
            <span asp-validation-for="VendorCustomers.Remarks" class="text-danger"></span>
        </div>

    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <button type="submit" class="btn btn-primary">Cancel</button>
</form>
